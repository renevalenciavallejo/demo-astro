---
import { Image } from "astro:assets";
import Layout from "../layouts/Layout.astro";
import ChallengeCard from "../components/ChallengeCard.astro";
import usersLeft from "../assets/images/section-2-users-left.png";
import usersRight from "../assets/images/section-2-users-right.png";
import watch from "../assets/images/section-3-watch.png";
import check from "../assets/images/section-4-check.svg";
import money from "../assets/images/section-5-money.svg";
import phone from "../assets/images/section-5-phone.png";
import garmin from "../assets/images/logo-garmin.svg";
import suunto from "../assets/images/logo-suunto.svg";
import email from "../assets/images/section-8-email.svg";
import backgroundSection8 from "../assets/images/section-8-background.png";
---

<Layout title="Welcome to Astro.">
  <main>
    <section
      class="flex items-center h-[35.6875rem] min-w-[20rem] px-14 bg-cobalt_blue_600"
    >
      <div class="w-[706px]">
        <h1 class="text-[64px] text-white leading-[5rem] font-bold">
          Virtual race platform and fantasy league
        </h1>
        <h2 class="mt-2 text-2xl text-white italic">
          <span class="text-glory_green_400">for real-life</span> physical
          activities.
        </h2>
        <div class="mt-[55px]">
          <a
            href="/"
            class="px-7 py-2.5 rounded-md bg-glory_green_400 text-base text-gray-800 font-semibold"
          >
            Register now</a
          >
        </div>
      </div>
    </section>
    <section
      class="grid grid-cols-4 items-center h-[19.125rem] px-14 bg-black text-white"
    >
      <div>
        <div class="float-left">
          <Image src={usersLeft} alt="People doing sport" />
        </div>
      </div>
      <div class="col-span-2 text-center">
        <p class="text-base leading-[1.25rem]">
          Competition is not about <span class="text-glory_green_400 italic">
            winning or losing.</span
          >
        </p>
        <p class="mt-3 text-[40px] leading-[3rem]">
          It's about pushing ourselves <span class="font-bold"
            >to be the best we can be</span
          >.
        </p>
      </div>
      <div>
        <div class="float-right">
          <Image src={usersRight} alt="People doing sport" />
        </div>
      </div>
    </section>
    <section
      class="flex items-center justify-center h-[19.125rem] px-14 mt-2 bg-white"
    >
      <Image src={watch} alt="Fitness device" />
      <div class="w-[377px] ml-10">
        <h2 class="text-[40px] leading-[3rem] font-bold">
          Sync your device <span class="font-medium italic"> and go!</span>
        </h2>
        <div class="mt-[45px]">
          <a
            href="/"
            class="px-7 py-2.5 rounded-md bg-cobalt_blue_600 text-base text-white font-semibold"
          >
            Register now</a
          >
        </div>
      </div>
    </section>
    <section
      class="flex flex-col items-center justify-center h-[36.6875rem] px-14 bg-cobalt_blue_100"
    >
      <div class="text-center">
        <h3 class="w-[385px] text-[40px] leading-[3rem]">
          Connect to <span class="font-bold">Swetro</span>
          <span class="text-2xl leading-[3rem] font-normal mt-4">
            in 3 simple steps</span
          >
        </h3>
      </div>
      <div class="flex items-center mt-8">
        <article class="w-[22.5rem] h-40 m-2 p-7 bg-white rounded-xl shadow-md">
          <div class="flex items-center">
            <Image src={check} alt="Check" />
            <h4 class="ml-2.5 text-2xl font-medium">Step 1</h4>
          </div>
          <p class="mt-2.5 text-sm leading-6 font-normal text-shadow_gray_500">
            Create your Swetro profile and sync your fitness tracker.
          </p>
        </article>

        <article class="w-[22.5rem] h-40 m-2 p-7 bg-white rounded-xl shadow-md">
          <div class="flex items-center">
            <Image src={check} alt="Check" />
            <h4 class="ml-2.5 text-2xl font-medium">Step 2</h4>
          </div>
          <p class="mt-2.5 text-sm leading-6 font-normal text-shadow_gray_500">
            Join a challenge, commit to a goal, and start working out.
          </p>
        </article>

        <article class="w-[22.5rem] h-40 m-2 p-7 bg-white rounded-xl shadow-md">
          <div class="flex items-center">
            <Image src={check} alt="Check" />
            <h4 class="ml-2.5 text-2xl font-medium">Step 3</h4>
          </div>
          <p class="mt-2.5 text-sm leading-6 font-normal text-shadow_gray_500">
            Earn cash rewards by completing the challenge.
          </p>
        </article>
      </div>
      <div class="mt-[45px]">
        <a
          href="/"
          class="px-7 py-2.5 rounded-md bg-cobalt_blue_600 text-base text-white font-semibold"
        >
          Register now</a
        >
      </div>
    </section>
    <section
      class="flex items-center justify-center h-[19rem] px-14 bg-cobalt_blue_600"
    >
      <div class="flex items-center">
        <Image src={money} alt="Money symbol" />
        <h4 class="w-[285px] text-[40px] leading-[3rem] text-white ml-2">
          Get rewarded <span class="font-bold italic">for getting fit</span>
        </h4>
      </div>

      <div class="relative top-[-37px] block m-0 p-0">
        <Image src={phone} alt="Swetro app" />
      </div>
    </section>
    <section
      class="flex flex-col items-center justify-center h-[30.4375rem] px-14 bg-cobalt_blue_100"
    >
      <div class="text-center">
        <h3 class="text-[40px] leading-[3rem]">Compatible devices:</h3>
      </div>
      <div class="mt-8">
        <div
          class="flex items-baseline justify-center w-[47.75rem] h-28 m-2 p-0 bg-white rounded-xl shadow-md"
        >
          <div class="w-[10.625rem] h-[1.375] m-8">
            <Image src={garmin} alt="Garmin logo" />
          </div>
          <div class="w-1 min-h-[40%] border-r-2 border-[#E0E0E0]"></div>
          <div class="w-[9.375rem] h-[1.375] m-8">
            <Image src={suunto} alt="Suunto logo" />
          </div>
        </div>
      </div>
      <div class="mt-[45px]">
        <a
          href="/"
          class="px-7 py-2.5 rounded-md bg-cobalt_blue_600 text-base text-white font-semibold"
        >
          Register now</a
        >
      </div>
    </section>
    <section
      class="flex flex-col items-center justify-center h-[48.0625rem] px-14 bg-black"
    >
      <div class="text-white text-center">
        <h3 class="w-[585px] text-[40px] leading-[3rem]">
          Get motivated and start achieving your <span class="font-bold italic"
            >fitness goals</span
          >
        </h3>

        <h4 class="mt-7 text-2xl leading-[3rem] font-normal">
          Available activities:
        </h4>
      </div>
      <div class="flex items-center justify-between mt-7">
        <ChallengeCard />
        <ChallengeCard />
        <ChallengeCard />
      </div>
      <h4>Races & Challenges</h4>
    </section>
    <section
      class="flex flex-col items-center justify-center h-[27.5625rem] px-14 bg-black bg-[url('/images/section-8-background.png')]"
    >
      <div class="text-center">
        <h3 class="text-[40px] leading-[3rem] text-white">Contact us</h3>
      </div>
      <div class="mt-8">
        <div
          class="flex items-center justify-center w-[32rem] h-24 m-2 p-0 bg-white rounded-xl shadow-md text-base"
        >
          <Image src={email} alt="Email" />
          <span class="ml-2">
            Get support by email: <span class="font-medium"
              >hello@swetro.com</span
            >
          </span>
        </div>
      </div>
    </section>
  </main>
</Layout>
