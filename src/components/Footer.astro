---
import { Image } from "astro:assets";
import logo from "../assets/images/logo.svg";

const date = new Date();
---

<footer
  class="flex flex-col md:flex-row justify-between px-4 py-10 md:px-14 font-open_sans bg-white"
>
  <div class="">
    <Image src={logo} alt="Swetro" />

    <p class="mt-5 text-xs leading-[1.25rem] font-normal text-shadow_gray_500">
      Copyright {date.getFullYear()} Swetro Company. <br />
       All rights reserved.
    </p>
  </div>
  <div
    class="flex flex-col md:flex-row justify-between mt-6 md:mt-0 text-sm leading-6"
  >
    <div class="mb-3 mr-7">
      <h4 class="font-bold">Menu</h4>
      <ul class="mt-2 text-shadow_gray_500">
        <li><a href="/" class="no-underline hover:underline">Home</a></li>
        <li>
          <a href="/challenges" class="no-underline hover:underline"
            >Races & challenges</a
          >
        </li>
        <li><a href="/" class="no-underline hover:underline">About us</a></li>
      </ul>
    </div>
    <div>
      <h4 class="font-bold">Support</h4>
      <ul class="mt-2 text-shadow_gray_500">
        <li>
          <a href="/privacy-policy" class="no-underline hover:underline"
            >Privacy policy</a
          >
        </li>
        <li>
          <a href="/terms-of-use" class="no-underline hover:underline"
            >Terms of use</a
          >
        </li>
      </ul>
    </div>
  </div>
</footer>
