---
import { Image } from "astro:assets";
import logo from "../assets/images/logo.svg";
---

<footer class="grid grid-cols-2 h-[14.9375rem] p-14 bg-white">
  <div class="">
    <Image src={logo} alt="Swetro" />

    <p class="mt-5 text-xs leading-[1.25rem] text-shadow_gray_500 font-normal">
      Copyright 2023 Swetro Company. <br />
       All rights reserved.
    </p>
  </div>
  <div class="grid grid-cols-2 justify-between">
    <div>
      <h4 class="text-base font-bold">Menu</h4>
      <ul class="mt-2 text-shadow_gray_500">
        <li>Home</li>
        <li>Races & challenges</li>
        <li>About us</li>
      </ul>
    </div>
    <div>
      <h4 class="text-base font-bold">Support</h4>
      <ul class="mt-2 text-shadow_gray_500">
        <li>Privacy policy</li>
      </ul>
    </div>
  </div>
</footer>
