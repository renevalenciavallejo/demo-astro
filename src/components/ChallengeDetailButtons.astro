---
const  { IsDetails } = Astro.props;

let btnParticipants = "";
let btnDetails = "";
let svgColorDetails = ""; 
let svgColorParticipants = "";
if(IsDetails){
    btnDetails = "bg-white border border-gray-300 rounded-10 text-black font-bold py-1 px-3 rounded-full inline-flex items-center focus:text-black";
    btnParticipants = "bg-black border border-gray-300 rounded-10 hover:text-black hover:bg-white focus:bg-white text-white font-bold py-1 px-3 rounded-full inline-flex items-center focus:text-black";
    svgColorDetails = "#000000";
    svgColorParticipants = "#FFFFFF";
}else{
    btnParticipants = "bg-white border border-gray-300 rounded-10 text-black font-bold py-1 px-3 rounded-full inline-flex items-center focus:text-black";
    btnDetails = "bg-black border border-gray-300 rounded-10 hover:text-black hover:bg-white focus:bg-white text-white font-bold py-1 px-3 rounded-full inline-flex items-center focus:text-black";
    svgColorParticipants = "#000000";
    svgColorDetails = "#FFFFFF";
}
---

<section class="bg-black w-full overflow-x-auto pt-0 px-4 md:px-14">
    <div
      class="flex space-x-4 sm:justify-center lg:justify-start md:justify-center"
    >
      <div class="flex-shrink-0">
        <a href="/url/details"
          class={btnDetails}
        >
          <svg
            class="group-632 w-5 h-5 ml-1 mr-1 transition-all duration-300 transform group-632-x"
            width="18"
            height="15"
            viewBox="0 0 18 15"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              d="M0.668734 14.1736L0.668735 14.1736C0.866538 14.4911 1.16924 14.65 1.5545 14.65H16.4452C16.8304 14.65 17.1331 14.4911 17.3309 14.1736L17.2036 14.0943L17.3309 14.1736C17.4272 14.0192 17.4806 13.8571 17.4831 13.6891C17.4856 13.5211 17.4371 13.3575 17.3454 13.2003L17.3448 13.1992L9.90077 0.680554C9.90054 0.680151 9.90031 0.679749 9.90008 0.679347C9.71006 0.34734 9.40054 0.183374 8.99984 0.183374C8.59912 0.183374 8.2896 0.347347 8.09958 0.679368L0.654894 13.1992L0.654889 13.1992L0.654234 13.2003C0.562616 13.3575 0.514088 13.5211 0.516596 13.6891C0.519104 13.8571 0.57249 14.0192 0.668734 14.1736ZM8.11679 4.06146V12.9801H2.81253L8.11679 4.06146ZM9.88288 4.06146L15.1871 12.9801H9.88288V4.06146Z"
              fill={svgColorDetails}
              stroke={svgColorDetails}
              stroke-Width="0.3"></path>
          </svg>
           Challenge details
        </a>
      </div>
  
      <div class="flex-shrink-0">
        <a
          href="/ulr/participants"
          class={btnParticipants}
        >
          <svg
            class="group-632 w-5 h-5 ml-1 mr-1 transition-all duration-300 transform group-632-x"
            viewBox="0 0 26 20"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              d="M3.5 16.4423V14.9423H16.625V16.4423H3.5ZM5.4327 12.75V11.25H18.5576V12.75H5.4327ZM7.375 9.05771V7.55774H20.5V9.05771H7.375Z"
              fill={svgColorParticipants}></path>
          </svg>
           Participants and times
        </a>
      </div>
    </div>
</section>

<style>
    a:hover > svg{
        filter: brightness(0) saturate(100%) invert(0%) sepia(15%) saturate(2237%) hue-rotate(356deg) brightness(84%) contrast(83%);
    }
  </style>